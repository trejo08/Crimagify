<div id="cropper_div">
	<div class="cropper_container">
		<div class="image_cropper">
			<%= image_tag @params[:image], :class => "cropbox", :id => "cropbox" %>			
			<% %w[x y w h].each do |attribute| %>
				<%= hidden_field_tag "crop_#{attribute}" %>
			<% end %>
			<%= hidden_field_tag :cropping,{}, :value => true, :id => "temp_image" %>
			<div class="actions">
				<%= link_to "Cancel", "", :remote => true, :class => "cancel_crop actions_links", :id => "cancel_crop" %>
				<%= link_to "Crop Image", "", :remote => true, :id => "crop_image", :class => "crop_image actions_links" , :disabled => 'disabled'%>
				<%= image_tag "crimagify/loader.gif" , :class => "loader_image"%>
				<div class="clear"></div>
			</div>
		</div>
		<!-- <div style="width:100px; height:100px; overflow:hidden">
			<h4>Preview</h4>
		  <%#= image_tag  @params, :id => "preview" %>
		</div> -->
		<div class="clear"></div>
	</div>
	<div class="clear"></div>
</div>