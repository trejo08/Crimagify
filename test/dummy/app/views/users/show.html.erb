<p id="notice"><%= notice %></p>
<%= CRIMAGIFY_ENV.to_yaml %>
<p>
  <b>Name:</b>
  <%= @user.name %>
</p>

<p>
  <b>Lastname:</b>
  <%= @user.lastname %>
</p>

<p>
  <b>Email:</b>
  <%= @user.email %>
</p>

<p>
	<% @user.products.each do |product| %>
		<div class="image_item">
			<b>Image</b><br>
			<div class="image_tag">
				<%= image_tag product.imgA.original_picture %><br>
			</div>
		</div>
		<div class="clear"></div><br>
	<% end %>
</p>

<%= link_to 'Edit', edit_user_path(@user) %> |
